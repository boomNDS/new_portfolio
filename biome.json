{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.nuxt/**",
      "!**/.output/**",
      "!**/dist/**",
      "!**/.data/**",
      "!**/coverage/**",
      "!**/*.d.ts",
      "!**/public/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConsole": { "level": "warn", "options": { "allow": ["log"] } }
      },
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "error"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "recommended": true
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "globals": [
      "defineNuxtConfig",
      "defineNuxtPlugin",
      "useNuxtApp",
      "useRuntimeConfig",
      "useRoute",
      "useRouter",
      "useState",
      "useAsyncData",
      "useFetch",
      "useHead",
      "useSeoMeta",
      "useDayjs",
      "useMediaQuery",
      "useEventListener",
      "useWindowScroll",
      "useMotionPreference",
      "useTheme",
      "useScrollTo",
      "navigateTo",
      "abortNavigation",
      "addRouteMiddleware",
      "onNuxtReady",
      "prefetchComponents",
      "preloadComponents",
      "refreshNuxtData",
      "reloadNuxtApp",
      "setPageLayout",
      "setResponseStatus",
      "updateAppConfig",
      "useAppConfig",
      "useError",
      "useRequestEvent",
      "useRequestFetch",
      "useRequestHeaders",
      "useRequestURL",
      "useServerHead",
      "useServerSeoMeta",
      "queryContent",
      "useContentHelpers",
      "useContentHead",
      "definePageMeta"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          },
          "style": {
            "useConst": "off"
          }
        }
      }
    },
    {
      "includes": ["**/composables/**/*.ts", "**/utils/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "error"
          }
        }
      }
    }
  ]
}
